@model bitproje.Entitys.KullaniciFirma

@{
    ViewData["Title"] = "FirmaEkle";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>


<h4>KULLANICIYA FİRMA EKLE</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FirmaEkle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Sicilno" />
            <div class="form-group">
                <label class="control-label">FİRMA</label>
                <select asp-for="Firmaid" class="form-control select">
                    @foreach (var k in ViewBag.firma)
                    {
                        <option value="@k.Firmaid">@k.Firmaid  /  @k.Funvan &emsp; @k.Isvrnadsoyad </option>
                    }
                </select>
            </div>
            <div class="form-group">
                &emsp; &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                <input type="submit" value="EKLE" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.Sicilno">

        <img style="height:35px;" title="Listeye geri dön" src="~/images/Iconsmind-Outline-Back.ico" />
    </a>
</div>


<script>
    $(".select").select2();
</script>