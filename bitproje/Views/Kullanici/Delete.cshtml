@model bitproje.Entitys.Kullanici
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    dt {
        height: 28px;
    }
</style>
<h3>KULLANICI</h3>
<br />

<div>
    <h style="color:red;">BU KULLANICIYI SİLMEK İSTEDİĞİNİZE EMİN MİSİNİZ ?</h>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            SİCİL NUMARASI
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Sicilno)
        </dd>
        <dt>
            TC
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tc)
        </dd>
        <dt>
            KULLANICI ADI
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ad)
        </dd>
        <dt>
            KULLANICI SOYADI
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Soyad)
        </dd>
        <dt>
            GÖREV TANIMI
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Gorevtanim)
        </dd>
        <dt>
            BOYU
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Boy)
        </dd>
        <dt>
            KİLOSU
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Kilo)
        </dd>
        <dt>
            KAN GRUBU
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Kangrup)
        </dd>
        <dt>
            CİNSİYET
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cinsiyet)
        </dd>
        <dt>
            DOĞUM YERİ
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Dogumyer)
        </dd>
        <dt>
            DOĞUM TARİHİ
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Dogumtarih)
        </dd>
        <dt>
            ÖĞRENİM DURUMU
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ogrenimdurum)
        </dd>
        <dt>
            STATÜ
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Statü)
        </dd>
        <dt>
            İSG KURUL GÖREVİ
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Isgkurulgorev)
        </dd>
        <dt>
            İŞE BAŞLANGIÇ TARİHİ
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Isebaslangictarih)
        </dd>
        <dt>
            UNVANI
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Unvan)
        </dd>
        <dt>
            DURUMU
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Durum)
        </dd>
    </dl>

    <form asp-action="Delete">
        @if (@Context.Session.GetString("grubu") == "A")
        {<a asp-action="Grupkullanici">LİSTEYE GERİ DÖN</a><i> &emsp;|&emsp;</i>}
        else if (@Context.Session.GetString("grubu") == "B")
        {<a asp-action="Firmakullanici">LİSTEYE GERİ DÖN</a><i> &emsp;|&emsp;</i>}
        <input type="hidden" asp-for="Sicilno" />
        <input type="submit" style="font-size:13px;font-weight:bold;height:27px;width:70px;" value="SİL" class="btn btn-danger" />

    </form>
</div>
