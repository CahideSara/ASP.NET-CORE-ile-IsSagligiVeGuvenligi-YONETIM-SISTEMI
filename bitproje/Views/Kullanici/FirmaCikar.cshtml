@model bitproje.Entitys.KullaniciFirma

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    dt {
        height: 28px;
    }
</style>

<br />

<div>
    <h style="color:red;">BU FİRMAYI KULLANICININ KONTROLÜNDEN ÇIKARMAK İSTEDİĞİNİZE EMİN MİSİNİZ ?</h>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            FİRMA :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Firma.Firmaid)&nbsp;/ @Html.DisplayFor(model => model.Firma.Funvan)&nbsp; @Html.DisplayFor(model => model.Firma.Isvrnadsoyad)
