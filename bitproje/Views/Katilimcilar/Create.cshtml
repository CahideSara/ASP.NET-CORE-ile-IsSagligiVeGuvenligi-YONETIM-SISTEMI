@model bitproje.Entitys.Katilimcilar

@{
    ViewData["Title"] = "Create";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>


<h4>KATILIMCI EKLE</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">KATILAN PERSONEL</label>
                <select asp-for="Sicilnop" class="form-control select">
                    @foreach (var k in ViewBag.per)
                    {
                        <option value="@k.Sicilnop">@k.Sicilnop /  @k.Ad  @k.Soyad  </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">BAŞARI YÜZDESİ</label>
                <input asp-for="Basariyuzdesi" value="%" class="form-control" />
                <span asp-validation-for="Basariyuzdesi" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Egitimid" />
            <div class="form-group">
                &emsp; &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                <input type="submit" value="EKLE" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.Egitimid">

        <img style="height:35px;" title="Listeye geri dön" src="~/images/Iconsmind-Outline-Back.ico" />
    </a>
</div>

<script>
    $(".select").select2();
</script>
