@model bitproje.Entitys.Tanilar

@{
    ViewData["Title"] = "Create";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>


<h4>HASTAYA YENİ TANI EKLE</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">TANI</label>
                <select asp-for="Tanimid" class="form-control select">
                    @foreach (var k in ViewBag.tani)
                    {
                        <option value="@k.Tanitid">@k.Tanitid  /  @k.Taniadi </option>
                    }
                </select>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Mid" />
            <div class="form-group">

                &emsp; &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                <input type="submit" value="EKLE" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Tanilar/Index/@Model.Mid"><img style="height:35px;" title="Listeye geri dön" src="~/images/Iconsmind-Outline-Back.ico" /></a>

</div>


<script>
    $(".select").select2();
</script>